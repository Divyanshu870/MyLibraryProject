<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewMyBooks"
    android:layout_width="150dp"
    android:layout_height="240dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    app:cardElevation="3dp"
    app:strokeColor="@color/text_hint_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageViewMyBooksThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/frankenstein" />

        <TextView
            android:id="@+id/textViewMyBooksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="20"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/layout_title_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/book_title"
            android:textSize="14sp" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>