<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OpenedBookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_lay_1"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/bookImage"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookTitle_text"
                android:text="Title placeholder"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookAuthor_text"
                android:layout_below="@+id/bookTitle_text"
                android:text="Author placeholder"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookPages_text"
                android:layout_below="@+id/bookAuthor_text"
                android:text="Pages:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rel_lay_2"
        android:layout_below="@+id/rel_lay_1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp">

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/bookDescription_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text=" Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample SampleSample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample    " />
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_lay_2"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/setToRead_btn"
            android:text="Want to read"
            android:textSize="13sp"
            android:layout_marginLeft="11dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/setCurrReading_btn"
            android:layout_toRightOf="@+id/setToRead_btn"
            android:text="Currently reading"
            android:textSize="13sp"
            android:layout_marginLeft="11dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/setAlreadyRead_btn"
            android:layout_toRightOf="@+id/setCurrReading_btn"
            android:text="Already read"
            android:textSize="13sp"
            android:layout_marginLeft="11dp"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/setFavourite_btn"
            android:layout_toRightOf="@+id/setAlreadyRead_btn"
            android:background="@mipmap/favourite_star"
            android:layout_marginLeft="11dp"/>

    </RelativeLayout>
</RelativeLayout>